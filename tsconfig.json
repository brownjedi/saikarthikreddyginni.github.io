{
  "compilerOptions": {
    "baseUrl": "src/",
    "outDir": "./dist/",
    "sourceMap": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
